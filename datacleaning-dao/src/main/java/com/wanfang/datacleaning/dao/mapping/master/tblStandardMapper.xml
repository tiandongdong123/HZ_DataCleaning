<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wanfang.datacleaning.dao.dao.master.TblStandardDao">
    <resultMap id="BaseDraftUnitResultMap" type="com.wanfang.datacleaning.dao.model.master.bo.StandardDraftUnitBO">
        <id column="ID" property="id" jdbcType="BIGINT"/>
        <result column="stand_num" property="standNum" jdbcType="VARCHAR"/>
        <result column="draft_unit" property="draftUnit" jdbcType="LONGVARCHAR"/>
    </resultMap>

    <resultMap id="BaseStandardTypeResultMap" type="com.wanfang.datacleaning.dao.model.master.bo.StandardStdTypeBO">
        <result column="draft_unit" property="draftUnit" jdbcType="LONGVARCHAR"/>
        <result column="stand_status" property="standardStatus" jdbcType="VARCHAR"/>
        <result column="stand_type" property="standardType" jdbcType="VARCHAR"/>
    </resultMap>

    <!--分页获取起草单位信息-->
    <select id="getBaseDraftUnitInfoByPage" resultMap="BaseDraftUnitResultMap">
        SELECT
          ID,stand_num, draft_unit
        FROM tblStandard
        WHERE
          ID <![CDATA[ > ]]> #{startIndex}
        ORDER BY ID
        LIMIT #{pageSize}
    </select>

    <!--分页获取标准类型信息-->
    <select id="getBaseStandardTypeInfoByPage" resultMap="BaseStandardTypeResultMap">
        SELECT
          draft_unit, stand_status,stand_type
        FROM tblStandard
        WHERE
          ID <![CDATA[ > ]]> #{startIndex}
        ORDER BY ID
        LIMIT #{pageSize}
    </select>

</mapper>